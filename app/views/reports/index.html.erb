<div class = "btn btn-default" style="float: right;"><%= link_to 'New Report', new_report_path %></div>
<h3 style="color: #337AB7">My reports</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th style="text-align: left"><small>Reportname</small></th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
  <% if !@reports.nil? %>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.reportname %></td>
        <td class="button"><a class="fancybox" data-fancybox-type="iframe" href='reports/serve?path=<%= report.path %>'>Review</a></td>
        <td class="button"><%= link_to 'Show', reports_show_path(:id => report.id, :index => "index") %></td>
        <% if report.user_id == session[:user_id] %>
        <td class="button"><%= link_to 'Edit', edit_report_path(report) %></td>
        <td class="button"><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
      </tr>
    <% end %>
      <% end %>
  </tbody>
</table>

