<h4>New message</h4>

<%= form_tag(:action => 'sendMail') do  %>
    <p><label for="email_subject">Subject</label>
      <%= text_field_tag :subject %></p>
    <p><label for="email_message">Message</label>
      <%= text_area_tag  :message %></p>
    <p><%= hidden_field_tag :mail_to, params[:user_id] %></p>
    <p><%= hidden_field_tag :report_id, params[:report_id] %></p>
    <p style="margin-left: 150px"><%= submit_tag "Send mail" %></p>
<% end %>

